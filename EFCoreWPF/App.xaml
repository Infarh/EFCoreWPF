<Application x:Class="EFCoreWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:EFCoreWPF"
             xmlns:vm="clr-namespace:EFCoreWPF.ViewModels"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>

                 <ResourceDictionary Source="Resources/Base/Colors.xaml"/>

                 <ResourceDictionary Source="Resources/Effects.xaml"/>
                 <ResourceDictionary Source="Resources/Buttons.xaml"/>

             </ResourceDictionary.MergedDictionaries>

             <vm:ViewModelLocator x:Key="Locator" d:IsDataSource="True"/>

         </ResourceDictionary>
    </Application.Resources>
</Application>
